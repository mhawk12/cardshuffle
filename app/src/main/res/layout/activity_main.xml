<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/back"
    tools:context="com.example.nishant.cards.MainActivity">


    <ImageView
        android:id="@+id/card_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/letsplay"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:layout_marginBottom="29dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/card_image"
        android:layout_alignStart="@+id/card_image">

        <Button
            android:id="@+id/shuffle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="shuffle"
            android:layout_marginLeft="30dp"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="67dp" />

        <Button
            android:id="@+id/dealonecard_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@drawable/round"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="   deal one card  "
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="194dp"
            tools:layout_editor_absoluteY="447dp" />


    </LinearLayout>




</RelativeLayout>
